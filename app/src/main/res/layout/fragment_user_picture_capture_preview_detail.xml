<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".fragments.UserPictureCapturePreviewDetailFragment"
    android:background="@color/application_background_color">

    <ImageView
        android:id="@+id/picture_preview_imageview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:weightSum="1">

        <EditText
            android:id="@+id/picture_comment_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textSize="15sp"
            android:hint="Insert Comment..."
            android:textColorHint="@color/white"
            android:inputType="textPersonName"
            android:singleLine="false"
            android:backgroundTint="@color/white"
            android:textCursorDrawable="@color/white"
            android:textColor="@color/white"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancel_save_picture_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="cancel"
            android:textColor="@color/black"
            android:drawableTop="@drawable/icons_cancel_24"
            android:background="@color/button_color"
            android:layout_margin="@dimen/back_button_margin_top"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/save_picture_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="save"
            android:textColor="@color/button_text_color"
            android:drawableTop="@drawable/icons_save_24"
            android:background="@color/button_color"
            android:layout_margin="@dimen/back_button_margin_top"
            />

        <Button
            android:id="@+id/share_picture_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="share"
            android:textColor="@color/button_text_color"
            android:drawableTop="@drawable/icons_share_24"
            android:background="@color/button_color"
            android:layout_margin="@dimen/back_button_margin_top"
            android:visibility="gone"
            />
    </LinearLayout>

</LinearLayout>