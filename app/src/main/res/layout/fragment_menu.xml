<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MenuFragment"
    android:weightSum="1"
    android:background="@color/application_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/back_button_container_weight"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/back_button_container_inner_left_weight"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/backButtonMenuFragment"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="@dimen/back_button_margin_end"
            android:layout_marginTop="@dimen/back_button_margin_top"
            android:background="@drawable/icons_back_48_white"
            android:gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.125"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Menu"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="vertical">


        <Button
            android:id="@+id/lookforcontactbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_rounded_corner_icon"
            android:drawableLeft="@drawable/icons_building_24"
            android:text="3D Building Model" />

        <Button
            android:id="@+id/userContactsMenuButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_rounded_corner_icon"
            android:drawableLeft="@drawable/icon_contacts_24"
            android:text="Contacts" />

        <Button
            android:id="@+id/buttonLocationHistoryFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_rounded_corner_icon"
            android:drawableLeft="@drawable/icons_location_history"
            android:text="Location History" />

        <Button
            android:id="@+id/buttonNavigationOptionFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Navigation Option"
            android:background="@drawable/button_rounded_corner_icon"
            android:drawableLeft="@drawable/icons_navigation_option_24"
            android:drawablePadding="2dp"/>

        <Button
            android:id="@+id/buttonBuildingModelPreviewFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_rounded_corner"
            android:text="Preview Model"
            android:visibility="gone"/>

        <Button
            android:id="@+id/buttonHelpFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_rounded_corner_icon"
            android:drawableLeft="@drawable/icons_help_24"
            android:drawablePadding="2dp"
            android:text="Help" />

        <Button
            android:id="@+id/syncLocalDbWithCloudButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_rounded_corner_icon"
            android:drawableLeft="@drawable/icons_upload_24"
            android:drawablePadding="2dp"
            android:text="Save Images to Cloud" />

    </LinearLayout>

</LinearLayout>