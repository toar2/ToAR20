<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LocationMarkerListFragment"
    android:orientation="vertical"
    android:background="@color/application_background_color"
    android:weightSum="1"
    >

    <LinearLayout
        android:layout_width="424dp"
        android:layout_height="17dp"
        android:layout_weight="@integer/back_button_container_weight"
        android:background="@color/application_background_color"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="290dp"
            android:layout_height="120dp"
            android:layout_weight="@integer/back_button_container_weight"
            android:clickable="true"
            android:src="@android:drawable/ic_menu_add"
            android:tint="@color/button_color" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_weight="1"
            android:editable="false"
            android:paddingLeft="10sp"
            android:paddingTop="20sp"
            android:text="Your contacts"
            android:textColor="@color/white"
            android:textSize="36sp" />
    </LinearLayout>


</LinearLayout>