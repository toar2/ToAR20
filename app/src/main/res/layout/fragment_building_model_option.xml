<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BuildingModelOptionFragment"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/application_background_color"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/back_button_container_weight"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="@integer/back_button_container_inner_left_weight"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/backButtonBuildingModelOption"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/icons_back_48_white"
            android:layout_marginEnd="@dimen/back_button_margin_end"
            android:layout_marginTop="@dimen/back_button_margin_top"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_marginLeft="10dp"
            android:textSize="28sp"
            android:gravity="center"
            android:text="Enable 3D models"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="Enable 3D Models of Building"
            android:gravity="start"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:textColor="@color/white"/>

        <CheckBox
            android:id="@+id/checkboxEnableModelRender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:gravity="start"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:buttonTint="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_container_building_model_option"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_weight="0.65"
        android:orientation="vertical"
        android:visibility="gone">

        <ListView
            android:id="@+id/modelOptionListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:padding="5dp"
            android:divider="@color/list_view_item_divider_color"
            android:dividerHeight="@dimen/list_view_divider_height"/>

        <Button
            android:id="@+id/doneButtonModelOption"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:text="Done"
            android:background="@drawable/button_rounded_corner"
            android:layout_weight="0.1"/>
    </LinearLayout>
</LinearLayout>